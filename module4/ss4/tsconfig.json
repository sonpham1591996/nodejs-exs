{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "sourceRoot": "./src",
    "incremental": true,
    "skipLibCheck": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false
  },
  "exclude": ["node_modules", "dist"]
}
